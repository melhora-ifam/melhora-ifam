<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance.App.BottomNavigationView.Active" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/neutral_light_50</item>
    </style>

    <style name="TextAppearance.App.BottomNavigationView.Inactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/neutral_light_50</item>
    </style>

</resources>
