<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título e Data -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadeiras Quebradas na Sala"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_data_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01 nov 2024    Categoria: Móveis"
            android:textSize="14sp"
            android:textColor="#666" />

        <!-- Status da Ocorrência -->
        <TextView
            android:id="@+id/tv_status_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Status da Ocorrência"
            android:textSize="16sp"
            android:textColor="#000" />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown"
            android:entries="@array/status_array" />


        <!-- Prioridade -->
        <TextView
            android:id="@+id/tv_prioridade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prioridade"
            android:textSize="16sp"
            android:textColor="#000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_nivel_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nível 1"
                android:background="#D6D6D6" />

            <Button
                android:id="@+id/btn_nivel_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nível 2"
                android:background="#FFA726"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btn_nivel_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nível 3"
                android:background="#D6D6D6" />

            <Button
                android:id="@+id/btn_nivel_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nível 4"
                android:background="#D6D6D6" />
        </LinearLayout>

        <!-- Local -->
        <TextView
            android:id="@+id/tv_local_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Local"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="CTzinho - Sala 118"
            android:textSize="14sp"
            android:textColor="#666" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/tv_descricao_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Descrição do Problema"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Muitas cadeiras da sala 118 estão danificadas, o que prejudica o conforto e a postura dos alunos e professores."
            android:textSize="14sp"
            android:textColor="#666" />

        <!-- Imagem -->
        <ImageView
            android:id="@+id/iv_imagem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_gerar_relatorio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gerar Relatório"
                android:background="#D6D6D6" />

            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salvar"
                android:background="#D6D6D6" />
        </LinearLayout>

        <!-- Campo de mensagem -->
        <EditText
            android:id="@+id/et_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Envie uma mensagem..."
            android:background="@drawable/doguinha" />
    </LinearLayout>
</ScrollView>
