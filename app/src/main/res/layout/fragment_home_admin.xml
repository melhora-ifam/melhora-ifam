<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_light_50"
    tools:context=".HomeAdminFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/barraPesquisa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.widget.SearchView
                android:id="@+id/barraDePesquisaHomeAdmin"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:iconifiedByDefault="false"
                android:background="@drawable/rounded_background"
                android:queryHint="@string/pesquisar_ocorrencias" />

            <ImageButton
                android:id="@+id/filterButton"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_background"
                android:contentDescription="@string/app_name"
                android:src="@drawable/filter_alt" />
        </LinearLayout>

        <TextView
            android:id="@+id/textFiltragem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mais_recentes_txt"
            android:textColor="@color/neutral_dark_700"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barraPesquisa" />

        <LinearLayout
            android:id="@+id/layoutOcorrencias"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFiltragem">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Ocorrencias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/ocorrencia_card" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>